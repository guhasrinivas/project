<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0 align-items-center">
          <div class="col-md-5 text-center p-4">
            <img src="<%= listing.image %>" class="img-fluid rounded-3 shadow-sm w-100 mb-3" alt="listing_image" style="max-height:320px; object-fit:cover;">
          </div>
          <div class="col-md-7 p-4">
            <h2 class="card-title fw-bold mb-3"><%= listing.title %></h2>
            <h4 class="text-success mb-3">&#8377; <%= Number(listing.price).toLocaleString("en-IN") %></h4>
            <p class="card-text mb-3 text-muted"><%= listing.description %></p>
            <div class="mb-2">
              <span class="badge bg-secondary me-2"><i class="bi bi-geo-alt"></i> <%= listing.location %></span>
              <span class="badge bg-light text-dark border"><%= listing.country %></span>
            </div>
            <%if(currUser && currUser._id.equals(listing.owner._id)){%>
              <div class="d-flex gap-3 mt-4">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn px-4">Edit</a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button class="btn btn-dark px-4">Delete</button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- review section-->
 <% if(currUser) {%>
<div class="container mt-5 mb-3">
  <hr>
  <h4>Leave a Review</h4>
  <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <div id="star-rating" class="d-flex gap-2">
        <% for(let i=1; i<=5; i++) { %>
          <input type="radio" class="btn-check" name="review[rating]" id="star<%=i%>" value="<%=i%>" autocomplete="off">
          <label class="btn btn-outline-warning px-2 py-1" for="star<%=i%>">
            <i class="bi bi-star-fill"></i>
          </label>
        <% } %>
      </div>
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
      <div class="invalid-feedback">Please enter a comment.</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <script>
    // Optional: highlight stars on hover/select
    document.querySelectorAll('#star-rating input').forEach((input, idx, arr) => {
      input.addEventListener('change', function() {
        arr.forEach((el, i) => {
          el.nextElementSibling.classList.toggle('btn-warning', i < idx+1);
        });
      });
    });
  </script>
<% } %>
  <hr>
  <h4>All Reviews</h4>
  <div class="row">
    <% for (review of listing.reviews) { %>
      <div class="col-md-6 mb-3">
        <div class="card border-0 shadow-sm rounded-3">
          <div class="card-body">
            <div class="mb-2">
              <% for(let i=1; i<=5; i++) { %>
                <i class="bi bi-star-fill <%= i <= review.rating ? 'text-warning' : 'text-secondary' %>"></i>
              <% } %>
              <span class="ms-2 fw-semibold text-warning"><%= review.rating%>/5</span> 
              <span class="badge bg-primary text-light mb-2 px-3 py-1" style="font-size:0.95em;">
              <i class="bi bi-person-circle me-1"></i>
              @<%= review.author.username%>
            </span>
            </div>
            <p class="card-text"><%= review.comment %></p>
            <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn btn-dark">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>


